#!/bin/bash
size=40
line="╭"$(printf    "%.0s-" $(seq 1 $((size + 2))))"╮"
bottom="╰---.  "$(printf    "%.0s-" $(seq 1 $((size - 4))))"╯"
cat << ENDL
$line
$( (echo "";fortune fortunes;echo "") | ./repage.py $size no )
$bottom
     \ |
$(fortune characters | gawk ' { if (FNR == 1) { printf "      \\|"; } else { printf "        " }; print $0 } ';)
ENDL
